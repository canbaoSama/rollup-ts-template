{
    "extends": "./tsconfig.json", // 继承 tsconfig.json 中的通用配置
    "compilerOptions": {
        "declaration": true, // 生成相应的 '.d.ts' file
        "declarationDir": "./dist/types", // 类型声明文件输出目录
        "emitDeclarationOnly": true, // 只生成声明文件，不生成 js 文件
        "rootDir": "./src", // 指定 TypeScript 编译器查找输入文件的根目录，用于控制输出目录结构，确保生成的文件与源文件的相对结构一致
    }
}